	"paths": {
		"/api/orders/{orderId}/pay": {
			"post": {
				"operationId": "ConfirmBooking",
				"responses": {
					"200": {
						"description": "Success",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/HttpResponse"
								}
							}
						}
					}
				},
				"description": "Mark a reservation order as paid.\r\nThis endpoint is called after successful payment to update the order status to \"Paid\".",
				"tags": [
					"Orders"
				],
				"security": [],
				"parameters": [
					{
						"description": "The ID of the order being paid",
						"in": "path",
						"name": "orderId",
						"required": true,
						"schema": {
							"type": "string"
						}
					}
				],
				"requestBody": {
					"description": "Payment details including customerId (for testing purposes only)",
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/OrderPaymentDto",
								"description": "Payment details including customerId (for testing purposes only)"
							}
						}
					}
				}
			}
		},
		"/api/events": {
			"get": {
				"operationId": "SelectEvents",
				"responses": {
					"200": {
						"description": "Success",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/HttpResponse_SelectEventDto-Array_"
								}
							}
						}
					}
				},
				"description": "Fetch all available events.\r\nThis endpoint returns a list of all events that users can view and book tickets for.",
				"tags": [
					"Events"
				],
				"security": [],
				"parameters": []
			}
		},
		"/api/events/{eventId}/seats": {
			"get": {
				"operationId": "SelectSeats",
				"responses": {
					"200": {
						"description": "Success",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/HttpResponse_SelectSeatDto-Array_"
								}
							}
						}
					}
				},
				"description": "Get seat availability for an event.\r\nThis endpoint returns all seats for a specific event, including availability.",
				"tags": [
					"Events"
				],
				"security": [],
				"parameters": [
					{
						"description": "The ID of the event",
						"in": "path",
						"name": "eventId",
						"required": true,
						"schema": {
							"type": "string"
						}
					}
				]
			}
		},
		"/api/events/{eventId}/seats/reserve": {
			"post": {
				"operationId": "ReserveSeats",
				"responses": {
					"202": {
						"description": "Success",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/HttpResponse"
								}
							}
						}
					}
				},
				"description": "Reserve selected seats for an event.\r\nTemporarily locks the specified seats to prevent other users from booking them before payment.",
				"tags": [
					"Events"
				],
				"security": [],
				"parameters": [
					{
						"description": "The ID of the event",
						"in": "path",
						"name": "eventId",
						"required": true,
						"schema": {
							"type": "string"
						}
					}
				],
				"requestBody": {
					"description": "An object containing seat IDs and customer ID",
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/ReserveSeatsDto",
								"description": "An object containing seat IDs and customer ID"
							}
						}
					}
				}
			}
		},
		"/api/events/{eventId}/seats/confirm": {
			"post": {
				"operationId": "ConfirmBooking",
				"responses": {
					"200": {
						"description": "Success",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/HttpResponse"
								}
							}
						}
					}
				},
				"description": "Confirm the booking after payment.\r\nMarks the reserved seats as officially booked and removes any temporary locks.",
				"tags": [
					"Events"
				],
				"security": [],
				"parameters": [
					{
						"description": "The ID of the event",
						"in": "path",
						"name": "eventId",
						"required": true,
						"schema": {
							"type": "string"
						}
					}
				],
				"requestBody": {
					"description": "Object containing seat IDs and order info",
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/ConfirmBookingDto",
								"description": "Object containing seat IDs and order info"
							}
						}
					}
				}
			}
		}
	},
